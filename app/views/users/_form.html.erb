<section>
<%= form_with model: user do |form| %>
  <div><%= form.text_field :first_name %></div>
  <div><%= form.text_field :last_name %></div>
  <div><%= form.text_field :email %></div>
  <div><%= form.text_field :company_name %></div>
  <div><%= form.text_field :alias %></div>
  <br>
  <div><%= form.submit %></div>
<% end %>
</section>
